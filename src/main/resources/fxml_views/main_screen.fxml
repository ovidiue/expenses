<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:id="root" focusTraversable="true" maxHeight="-Infinity" maxWidth="-Infinity"
  prefHeight="850.0" prefWidth="1083.0" xmlns="http://javafx.com/javafx/8.0.141"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="%file">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Close"/>
                      <MenuItem fx:id="radioMenuItemExport" mnemonicParsing="false"
                        text="Export expenses"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="%edit">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Delete"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="%help">
                    <items>
                      <MenuItem mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Settings">
                    <items>
                        <Menu mnemonicParsing="false" text="Language">
                            <items>
                              <RadioMenuItem mnemonicParsing="false" text="English"/>
                              <RadioMenuItem mnemonicParsing="false" text="French"/>
                              <RadioMenuItem mnemonicParsing="false" text="Romanian"/>
                            </items>
                        </Menu>
                      <SeparatorMenuItem mnemonicParsing="false"/>
                        <Menu mnemonicParsing="false" text="Theme">
                            <items>
                              <RadioMenuItem fx:id="radioMenuItemLight" mnemonicParsing="false"
                                selected="true" text="Light">
                                    <toggleGroup>
                                      <ToggleGroup fx:id="theme"/>
                                    </toggleGroup>
                                </RadioMenuItem>
                              <RadioMenuItem fx:id="radioMenuItemDark" mnemonicParsing="false"
                                text="Dark" toggleGroup="$theme"/>
                            </items>
                        </Menu>
                    </items>
                </Menu>
            </menus>
            <padding>
              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </MenuBar>
    </top>
    <left>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="TOP_CENTER" prefHeight="818.0" prefWidth="139.0" spacing="20.0">
                    <children>
                      <JFXButton maxWidth="1.7976931348623157E308" minHeight="50.0"
                        onAction="#viewAllExpenses"
                        style="-fx-background-color: #1D8F00; -fx-background-radius: 10;"
                        text="%view_expenses" textFill="#fffdfd"/>
                      <Separator prefWidth="200.0"/>
                      <JFXButton maxWidth="1.7976931348623157E308" minHeight="50.0"
                        onAction="#addExpense"
                        style="-fx-background-color: #1D8F00; -fx-background-radius: 10;"
                        text="%add_expense" textFill="#fffdfd"/>
                      <Separator prefWidth="200.0"/>
                      <JFXButton maxWidth="1.7976931348623157E308" minHeight="50.0"
                        onAction="#viewAllCategories"
                        style="-fx-background-color: #1D8F00; -fx-background-radius: 10;"
                        text="View categories" textFill="#fffdfd"/>
                      <Separator prefWidth="200.0"/>
                      <JFXButton maxWidth="1.7976931348623157E308" minHeight="50.0"
                        onAction="#viewAllTags"
                        style="-fx-background-color: #1D8F00; -fx-background-radius: 10;"
                        text="View tags" textFill="#fffdfd"/>
                      <Separator prefWidth="200.0"/>
                      <JFXButton maxWidth="1.7976931348623157E308" minHeight="50.0"
                        onAction="#viewReports"
                        style="-fx-background-color: #1D8F00; -fx-background-radius: 10;"
                        text="Reports" textFill="#fffdfd"/>
                    </children>
                    <HBox.margin>
                      <Insets left="5.0" right="5.0" top="10.0"/>
                    </HBox.margin>
                </VBox>
              <Separator minWidth="20.0" orientation="VERTICAL" prefHeight="200.0"/>
            </children>
        </HBox>
    </left>
</BorderPane>
